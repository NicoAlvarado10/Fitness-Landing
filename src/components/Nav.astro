---
import { Image } from 'astro:assets';
import logoDark from "../assets/logo-dark.png";
import logoWhite from "../assets/logo-white.png";
---
<nav class="nav">
    <a href="#" class="nav__logo">
        <Image src={logoDark} class="logo-dark" alt="logo-dark" />
        <Image src={logoWhite} class="logo-white" alt="logo-white" />
    </a>
    <ul class="nav__menu">
        <li><a class="nav__link" href="#home">Home</a></li>
        <li><a class="nav__link" href="#about">About</a></li>
        <li><a class="nav__link" href="#services">Services</a></li>
        <li><a class="nav__link" href="#clases">Classes</a></li>
        <li><a class="nav__link" href="#blog">Blog</a></li>
    </ul>
    <button class="nav__btn">Join Now</button>
    <div class="menu-toggle">
        <i class="ri-menu-fill"></i>
    </div>
</nav>

<style>
    .nav{
        display: flex;
        align-items: center;
        justify-content: space-between;
        max-width: var(--max-width);
        margin: 0 auto;
        padding-top: 2rem;
    }
    .nav__menu{
        display: flex;
        align-items: center;
        gap: 2rem;
    }
    .nav__btn{
        padding: 0.8rem 1.5rem;
        border-radius: 5px;
        background-color: var(--text-dark);
        color: var(--white);
        cursor: pointer;
        font-size: 1rem;
    }
    .nav__btn:hover{
        background-color: var(--primary-color);
    }
    .logo-white{
        display: none;
    }
    .nav__link{
        transition: 0.3s;
        font-weight: 600;
        color: var(--text-dark);
    }
    .nav__link:hover{
        color: var(--primary-color);
    }
    .menu-toggle{
        display: none;
    }
    @media (max-width:768px ){
        .nav__menu {
        display: none;
        flex-direction: column;
        
    }
    .logo-dark{
        display: none;
    }
    .logo-white{
        display: block;
        
    }
    .nav__logo{
        margin-left: 2rem;
        color: var(--white);
    }
    .menu-toggle{
        margin-right: 2rem;
    }
    .nav{
        background-color: var(--text-dark);
        position: fixed;
        width: 100%;
        padding: 0;
        padding-top: 1rem;
        padding-bottom: 0.5rem;
        z-index: 1;
    }
    .nav__btn{
        display: none;
    }
    .nav__link{
        color: var(--white);
    }
    .nav__link:hover{
        color: var(--primary-color);

    }
    .nav__menu.active {
        display: flex;
        position: absolute;
        bottom: 10%;
        background-color: var(--text-dark);
        padding: 2rem 0;
        width: 100%;
        transform: translateY(100%);
        transition: 0.3s;
        z-index: 1;
    }

    .menu-toggle {
        display: block;
        font-size: 2rem;
        cursor: pointer;
        color: var(--white);
        z-index: 1;
    }
    }
</style>

</style>

<script>
 const menuToggle = document.querySelector('.menu-toggle');
const navMenu = document.querySelector('.nav__menu');

if (menuToggle && navMenu) {
    const menuIcon = menuToggle.querySelector('i');

    if (menuIcon) {
        menuToggle.addEventListener('click', () => {
            navMenu.classList.toggle('active');
            navMenu.classList.toggle('open');
            const isOpen = navMenu.classList.contains('open');
            menuIcon.setAttribute('class', isOpen ? 'ri-close-line' : 'ri-menu-line');
        });

        document.addEventListener('click', (event) => {
            const target = event.target as Node;
            if (!navMenu.contains(target) && !menuToggle.contains(target)) {
                navMenu.classList.remove('active');
                navMenu.classList.remove('open');
                menuIcon.setAttribute('class', 'ri-menu-line');
            }
        });
    }
}

</script>