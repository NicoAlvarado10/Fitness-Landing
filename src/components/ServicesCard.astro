---
const { number, title, description } = Astro.props;
---
<div class="services__card">
    <span class="card__number">{number}</span>
    <h3 class="card__title">{title}</h3>
    <p class="card__paragraph">{description}</p>
</div>
<style>
.services__card{
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
}
.card__number{
    font-size: 2rem;
    font-weight: 800;
    -webkit-text-fill-color: transparent;
    -webkit-text-stroke: 1px var(--white);
    opacity: 0.75;
}
.card__title{
    font-size: 1.3rem;
    color: var(--white);
    font-weight: 700;
}
.card__paragraph{
    color: var(--text-light);
    line-height: 1.5;
    font-size: 1.1rem;
}

</style>